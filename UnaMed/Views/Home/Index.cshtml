@page
@model IndexModel
@{
    ViewData["Title"] = "Início";
    var userName = Model.UserName ?? "Usuário";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #fff;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        .search-bar {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            margin-bottom: 30px;
            font-size: 16px;
        }
        .welcome-card {
            background-color: #C3F2CD;
            border-radius: 15px;
            padding: 25px;
            display: flex;
            align-items: center;
            margin-bottom: 40px;
        }
        .welcome-card img {
            height: 100px;
        }
        .welcome-text {
            margin-left: 20px;
        }
        .welcome-text h2 {
            margin: 0;
            font-size: 24px;
        }
        .welcome-text h3 {
            margin: 5px 0 0;
            color: green;
            font-size: 20px;
        }
        .section-title {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .section-subtitle {
            font-size: 16px;
            color: gray;
            margin-bottom: 20px;
        }
        .horizontal-scroll {
            display: flex;
            gap: 30px;
            margin-bottom: 40px;
        }
        .clinic, .area {
            text-align: center;
        }
        .clinic img, .area img {
            height: 50px;
        }
        .area-label, .clinic-label {
            margin-top: 10px;
            font-size: 16px;
        }
        footer {
            background-color: #D7ECD9;
            padding: 20px;
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }
        footer a {
            color: black;
            text-decoration: none;
            font-size: 16px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <input type="text" class="search-bar" placeholder="O que você procura?" />

        <div class="welcome-card">
            <img src="~/images/doctor.png" alt="Doutor" />
            <div class="welcome-text">
                <h2>Olá, @userName!</h2>
                <h3>SAÚDE NA PALMA DA SUA MÃO!</h3>
            </div>
        </div>

        <div>
            <div class="section-title">Clínicas mais próximas</div>
            <div class="section-subtitle">Agende sua consulta em clínicas perto de você</div>
            <div class="horizontal-scroll">
                <div class="clinic">
                    <img src="~/images/clinic.png" alt="Clínica" />
                    <div class="clinic-label">Clínica<br />3,6km</div>
                </div>
                <div class="clinic">
                    <img src="~/images/clinic.png" alt="Clínica" />
                    <div class="clinic-label">Clínica<br />5,2km</div>
                </div>
                <div class="clinic">
                    <img src="~/images/clinic.png" alt="Clínica" />
                    <div class="clinic-label">Clínica<br />9,3km</div>
                </div>
                <div class="clinic">
                    <img src="~/images/clinic.png" alt="Clínica" />
                    <div class="clinic-label">Clínica<br />12,8km</div>
                </div>
            </div>
        </div>

        <div>
            <div class="section-title">Áreas Médicas</div>
            <div class="horizontal-scroll">
                <div class="area">
                    <img src="~/images/dermatology.png" alt="Dermatologia" />
                    <div class="area-label">Dermatologia</div>
                </div>
                <div class="area">
                    <img src="~/images/cardiology.png" alt="Cardiologia" />
                    <div class="area-label">Cardiologia</div>
                </div>
                <div class="area">
                    <img src="~/images/general.png" alt="Clínico Geral" />
                    <div class="area-label">Clínico Geral</div>
                </div>
                <div class="area">
                    <img src="~/images/dentist.png" alt="Dentista" />
                    <div class="area-label">Dentista</div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <a href="#"><div>Início</div></a>
        <a href="#"><div>Consultas</div></a>
        <a href="#"><div>Notificações</div></a>
        <a href="#"><div>Perfil</div></a>
    </footer>
</body>
</html>
